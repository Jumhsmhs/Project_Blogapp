      <% showallusers.forEach(function(user){ %>
        <tbody>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.total_post%></td>
            <td><%= user.total_post%></td>
            <td><%= user._id %></td>
            <td><%= user.favourite%></td>
       
          </tr>
        </tbody>
        <% }); %>     

        <% if(photogallery.length > 0 ) {%> 
          <div class="row mt-3">
              <!-- loop photogallerry -->
                  <% for(var i=0; i < photogallery.length; i++) { %>
                  <div class="col-lg-3 col-md-4 col-6 p-2">
                      <a href="/admin/adminpost<%= photogallery[i]._id %>">
                          <div class="card">
                              <img src="/images/posts/<%= photogallery[i].imgurl %>" alt="" style="height: 150px;" class="img-crop">
                          </div>
                      </a>
                      
                  </div>     
                  <% } %>
          </div>
          <% } %>
          <% if(photogallery.length <= 0 ) { %>
              <div class="text-center mt-3 p-3 bg-light">
                  <h6>No Photo</h6>
              </div>
          <% } %>
      </div>
  
  </div>
  