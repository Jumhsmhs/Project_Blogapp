<%- include("../layout/header") %>
<!DOCTYPE html>

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title></title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">    
    </head>
          
             <body>
         
              <nav>
                <div class="nav-wrapper">
                  <a href="/admin" class="brand-logo">ADMIN</a>
                  <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li>User<p class="secondary-content"><i class="material-icons">grade</i></p></li>
                    <li><a href="/admin/addcatelog">Catelog</a></li>
                    <li><a href="">Edit post</a></li>
                    <li><a href="/admin">Back</a></li>
                  </ul>
                </div>
              </nav>
             
<div class="card">
  <h3 class="card-header text-center font-weight-bold text-uppercase py-4">ตารางข้อมูลผู้ใช้</h3>
  <div class="card-body">
    <div id="table" class="table-editable">
      <table class="table table-bordered table-responsive-md table-striped text-center">
        <thead>
          <tr>
            <th class="text-center">Username</th>
            <th class="text-center">E-mail</th>
            <th class="text-center">Post</th>
            <th class="text-center">Usertype</th>
            <th class="text-center">Warn</th>
            <th class="text-center">Edit</th>
          </tr>
        </thead>
        <% showallusers.forEach(function(user){ %>
        <tbody>
          <tr>
            <td class="pt-3-half" contenteditable="true"><%= user.username %></td>
            <td class="pt-3-half" contenteditable="true"><%= user.email %></td>
            <td class="pt-3-half" contenteditable="true"><%= user.total_post%></td>
            <td class="pt-3-half" contenteditable="true"><%= user.permission %></td>
          
            
            <td>
              <a class="btn waves-effect waves-light red" href="#"><i class="material-icons right">notifications_activee</i>เตือน</a>
            </td>
            <td>
              <a class="waves-effect waves-light btn" href="#"><i class="material-icons right">edit</i>แก้ไข</a>
            </td>
          </tr>
        </tbody>
        <% }); %>    
      </table>
    </div>
  </div>
</div>

</body>
</html>