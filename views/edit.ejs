<%- include("layout/header") %>
<%- include("layout/layoutnavbar") %>
<% if(locals.user){ %>
    <div class="container mt-5 mb-5">
        <h3 class="text-center mt-lg-0 mt-md-4 mt-sm-4 ">Edit profile</h3>
        <form method="POST" action="/profile/edit/id=<%= user._id %>" class="" style="background-color: whitesmoke; padding: 20px; margin: 10px auto; width: 500px;">
            <div class="btn-edit">
                <div class="mt-3">
                    <div class="">Username: <%= user.username %>
                        <i class="fas fa-user-edit" id="showboxedit"></i>
                        <span style="float: right;" id="showboxeditname"></span>
                    </div>
                </div>
                <hr>
                <div class="mt-3">
                    <div class="">Email: <%= user.email %>
                    <span style="float: right;"><input type="text" placeholder="New email" name="email"></span>
                </div>      
                <hr>
            </div>
            <div style="text-align:center;">
                <button type="submit" class="btn btn-success" >save</button>
            </div>
            
        </form>
        <script>
            $(document).ready(function(){
                $("i").click(function(){
                    $("div").prepend("<input>");
                });
            });
        </script>
    </div>
<% } %> 
<% if(!locals.user){ %>
    <div class="text-center p-5"><h2>Please Login!</h2></div>
<% } %> 
