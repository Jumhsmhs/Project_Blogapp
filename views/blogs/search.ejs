<%- include("../layout/header") %>
<%- include("../layout/layoutnavbar") %>
<div class="container">
    <h2 class="mt-3 mb-3 pl-2">ค้นหา "<%= key %>" พบ <%= ItemSearch.length %> บทความ</h2>
</div>
<div class="container page-search">

    <div class="p-3">
        <% ItemSearch.forEach(function(item) { %>        
            <article class="item-article-search shadow">
                <div class="items-search">
                    <figure class="image-search-page">
                        <a href="/travel/review/<%= item._id %>">
                            <img src="/images/posts/<%= item.image %>" class="image-search-page-crop" alt="<%= item.image %>"> 
                        </a>
                    </figure>
                    <div class="detail-search">
                        <a href="/travel/review/<%= item._id %>">
                            <h4><%= description(item.title,10)%></h4>
                        </a>
                        <p class="content"><%- description(item.content,50) %></p>
                        <div>
                            <% item.tags.forEach(function(tag) { %>  
                                <span class=""><a href="/travel/search?keyword=<%= tag %>"> #<%= tag %> </a></span>
                            <% }); %> 
                        </div>
                        
                    </div>
                </div>
            </article>
        <% }); %> 
    </div>
    <div>
        <div>
            <label for="text">ช่วงราคา </label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">ตำกว่า 100 บาท</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">ตำกว่า 300 บาท</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">ตำกว่า 500 บาท</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">ตำกว่า 1000 บาท</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">ไม่จำกัด</label>
            </div>
        </div>

    </div>
</div>
