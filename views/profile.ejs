<%- include("layout/header") %>
<%- include("layout/layoutnavbar") %>
<% if(locals.user){ %>
<div style="background-color: whitesmoke">
    <div class="container pt-lg-4 pb-lg-4 pt-3 pb-3">
        <div class="row">
            <div class="col-lg-4 col-12">
                <div class="m-auto img-profile" >
                    <img src="/images/img-profile/<%= profile[0].image %>" alt="" class="" id="myImg">
                </div>
            </div>
            <div class="col-lg-8 col-12 pt-lg-5 pt-1">
                <div class="card bg-white p-4">
                    <h4>ชื่อผู้ใช้ : <%= profile[0].username %></h4>
                    <h6>อีเมล : <%= profile[0].email %></h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
  <div class="mt-5">      
        <div class="row">
          <% if(profile[0].post.length > 0){ %>
            <div class="col-md-9 col-12">
                      <div class="row">
                        <% for(var i=0; i < (profile[0].post.length); i++) { %>
                        <article class="col-md-6 col-6 pb-3">
                          <a href="/blogs/review/<%= profile[0].post[i]._id %>">
                            <div class="card">
                              <img src="/images/posts/<%= profile[0].post[i].imgurl %>" alt="" style="height: 230px;" id="imgpageprofile" class="img-crop" >
                              <div class="p-2">
                                <h5><%= profile[0].post[i].name %></h5>
                                <div class="mt-auto">
                                  <i class="fas fa-eye eye-view"> 0</i>
                                  <div style="float: right;">
                                    <a href="/blogs/delete/<%= profile[0].post[i]._id %>">
                                     ลบ 
                                    </a>
                                    <a href="/blogs/edit/<%= profile[0].post[i]._id %>">
                                      แก้ไข
                                    </a>
                                  </div>
                                  
                                </div>
                              </div>
                            </div>
                          </a>     
                        </article>
                        <% } %>
                      </div>
            </div>
            <% } %>   
            <% if(profile[0].post.length <= 0){ %>
              <div class="col-md-9 col-12 text-center">
                  <h2>No timeline</h2>
              </div>
            <% } %>
            <div class="col-md-3 col-12 pt-3" style="background-color: whitesmoke;">
                <div class="bg-light mt-3">
                  <div class="p-2 bg-success text-white">หมวดหมู่</div>
                  <div class="p-1">
                      <ul>
                          <% for(var i=0; i<(Category.length); i++) { %>
                              <li><a href="/blogs/showmore/<%= Category[i].name %>"><%= Category[i].name %></a></li>
                          <% } %>
                      </ul>
                  </div>
              </div>
            </div>

      </div>
  </div>
  <!-- The Modal -->
  <div id="myModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
  </div>
  <script>
    
    // Get the modal
    var modal = document.getElementById('myModal');

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    var img = document.getElementById('myImg');
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");
    img.onclick = function(){
      modal.style.display = "block";
      modalImg.src = this.src;
      captionText.innerHTML = this.alt;
    }

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function() { 
      modal.style.display = "none";
    }
    </script>
</div>
 
<% } %>

<% if(!locals.user){ %>
    <div class="text-center p-5"><h2>Please Login!</h2></div>
<% } %> 
<%- include("layout/footer") %>  