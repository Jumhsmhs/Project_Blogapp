<%- include("layout/header") %>
<%- include("layout/layoutnavbar") %>
<% if(locals.user){ %>
<div style="background-color: whitesmoke">
    <div class="container pt-lg-4 pb-lg-4 pt-3 pb-3">
        <div class="row">
            <div class="col-md-4 col-12">
                <div class="card p-2">
                    <img src="/images/hqdefault-1.jpg" alt="" width="100%" height="300px">
                </div>
            </div>
            <div class="col-md-8 col-12 ">
                <div class="card bg-white p-4">
                    <h3>ชื่อผู้ใช้ : <%= user.username %></h3>
                    <h6>รหัสสมาชิก : <%= user._id %></h6>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="mt-3 mb-3">
        <h2 class="text-center">My Gallery</h2>
        <% if(photogallery.length > 0 ) {%> 
        <div class="row">
            <!-- loop photogallerry -->
                <% for(var i=0; i < photogallery.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-6 mb-4">
                    <div class="card">
                            <img src="<%= photogallery[i].imgurl %>" alt="" style="height: 150px;">
                    </div>
                </div>     
                <% } %>
        </div>
        <% } %>
        <% if(photogallery.length <= 0 ) { %>
            <div class="text-center mt-3 p-3 bg-light">
                <h6>No Photo</h6>
            </div>
        <% } %>
    </div>

</div>

<% } %> 
<% if(!locals.user){ %>
    <div class="text-center p-5"><h2>Please Login!</h2></div>
<% } %> 
<%- include("layout/footer") %>  