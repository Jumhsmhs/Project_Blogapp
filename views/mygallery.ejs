<%- include("layout/header") %>
<%- include("layout/layoutnavbar") %>
<% if(locals.user){ %>
    <div style="background-color: whitesmoke">
        <div class="container pt-lg-4 pb-lg-4 pt-3 pb-3">
            <div class="row">
                <div class="col-lg-4 col-12">
                    <div class="m-auto img-profile" >
                        <img src="/images/img-profile/<%= user.image %>" alt="" id="myImg">
                    </div>
                </div>
                <div class="col-lg-8 col-12 pt-lg-5 pt-1">
                    <div class="card bg-white p-4">
                        <h4>ชื่อผู้ใช้ : <%= user.username %></h4>
                        <h6>อีเมล : <%= user.email %></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container">
    <div class="mt-3 mb-3">
        <h2 class="text-center">My Gallery</h2>
        <% if(photogallery.length > 0 ) {%> 
        <div class="row mt-2">
            <!-- loop photogallerry -->
                <% for(var i=0; i < photogallery.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-6 mb-4">
                    <a href="/blogs/review/<%= photogallery[i]._id %>">
                        <div class="card">
                            <img src="/images/posts/<%= photogallery[i].imgurl %>" alt="" style="height: 150px;" class="img-crop">
                        </div>
                    </a>
                    
                </div>     
                <% } %>
        </div>
        <% } %>
        <% if(photogallery.length <= 0 ) { %>
            <div class="text-center mt-3 p-3 bg-light">
                <h6>No Photo</h6>
            </div>
        <% } %>
    </div>

</div>

<% } %> 
<% if(!locals.user){ %>
    <div class="text-center p-5"><h2>Please Login!</h2></div>
<% } %> 
<%- include("layout/footer") %>  